@article{vasquez_symbionts_2012,
	title = {Symbionts as {Major} {Modulators} of {Insect} {Health}: {Lactic} {Acid} {Bacteria} and {Honeybees}},
	volume = {7},
	issn = {1932-6203},
	shorttitle = {Symbionts as {Major} {Modulators} of {Insect} {Health}},
