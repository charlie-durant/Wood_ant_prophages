	journal = {Soil Biology and Biochemistry},
	author = {Dauber, Jens and Wolters, Volkmar},
	month = jan,
	year = {2000},
	keywords = {Ant mounds, Biolog, Formicidae, Functional diversity, Microbial activity, Soil microflora},
	pages = {93--99},
}

