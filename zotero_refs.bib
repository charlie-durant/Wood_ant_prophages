@article{tikhe_metavirome_2018,
	title = {Metavirome {Sequencing} of the {Termite} {Gut} {Reveals} the {Presence} of an {Unexplored} {Bacteriophage} {Community}},
	volume = {8},
	issn = {1664-302X},
