	journal = {mBio},
	author = {Maier, Tanja V. and Lucio, Marianna and Lee, Lang Ho and VerBerkmoes, Nathan C. and Brislawn, Colin J. and Bernhardt, Jörg and Lamendella, Regina and McDermott, Jason E. and Bergeron, Nathalie and Heinzmann, Silke S. and Morton, James T. and González, Antonio and Ackermann, Gail and Knight, Rob and Riedel, Katharina and Krauss, Ronald M. and Schmitt-Kopplin, Philippe and Jansson, Janet K.},
